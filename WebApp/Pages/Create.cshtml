@page
@model WebApp.Pages.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>
<p>Enter your name:</p>

<form method="post">
    <!-- Summary validation -->
    <div asp-validation-summary="All"></div>
    <div>Name: <input asp-for="Customer.Name" /></div>
    <!-- field by field validation -->
    <span asp-validation-for="Customer.Name"></span>
    <input type="submit" />
</form>

